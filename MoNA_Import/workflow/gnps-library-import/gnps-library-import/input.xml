<?xml version="1.0" encoding="ISO-8859-1" ?>
<interface id="gnps-library-import" version="1.2.5">
    <workflow-id>GNPS-LIBRARY-IMPORT</workflow-id>
    <workflow-label>GNPS-LIBRARY-IMPORT</workflow-label>

    <!-- Parameter declarations -->
    <parameters>
        <!-- Universal parameters -->
        <parameter name="desc" label="Description">
            <validator type="length" maximum="1000"/>
        </parameter>
        <parameter name="email" label="Email">
            <validator type="email"/>
        </parameter>

        <parameter name="IMPORT_SOURCE" label="IMPORT_SOURCE">
            <options>
                    <option value="MONA" label="MONA"/>
            </options>
            <validator type="set"/>
        </parameter>

        <parameter name="MONA_JSON_URL" label="MONA_JSON_URL">
            <default value="XXX"/>
        </parameter>

        <parameter name="TARGET_LIBRARY_NAME" label="TARGET_LIBRARY_NAME">
            <default value="MONA"/>
        </parameter>
    </parameters>

    <block label="Advanced MoNA Options">
        <row>
            <cell>
                <label>
                    <content parameter="IMPORT_SOURCE"/>
                </label>
            </cell>

            <cell>
                <input type="select" parameter="IMPORT_SOURCE">
                </input>
            </cell>
              <cell>
                  <label>
                      <content parameter="MONA_JSON_URL"/>
                  </label>
              </cell>
              <cell>
                  <input type="text" parameter="MONA_JSON_URL">
                      <attribute name="size" value="30"/>
                  </input>
              </cell>
              <cell>
                  <label>
                      <content parameter="TARGET_LIBRARY_NAME"/>
                  </label>
              </cell>
              <cell>
                  <input type="text" parameter="TARGET_LIBRARY_NAME">
                      <attribute name="size" value="15"/>
                  </input>
              </cell>
          </row>
    </block>
</interface>
